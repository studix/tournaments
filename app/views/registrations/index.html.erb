              <% if !reg.draw.is_single? %>
                  Partner: <%= reg.partner%>
              <%  end %>
            <%  end %>
          </ul>
        </td>
        <td><%= link_to "LÃ¶schen", tournament_registration_path(registration.tournament, registration), :method => :delete, :confirm => "Bist du sicher?" %></td>
