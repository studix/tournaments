<div class="row">
	<h2>Anmeldung f√ºr die <%= @registration.tournament.title %></h2>
	<%= form_for [@registration.tournament, @registration], :html => {:class => "form-horizontal"} do %>

	
	<fieldset class="form-group">
		<div class="row">
			<legend class="col-form-label col-sm-2 pt-0">Tableaux</legend>
			<div class="col-sm-10">

			 <%= collection_check_boxes :registration, :draw_ids, @registration.tournament.draws, :id, :title do |b| %>
				<div class="form-check">
					<%=b.check_box(class: "form-check-input")%>
					<%=b.label(class: "form-check-label")%>
					</div>
  				<% end %>
			</div>
		</div>
	</fieldset>
	
	<div class="form-group row">
		<%= hidden_field_tag 'tournament_id', @registration.tournament_id %> 
		<label for="registration_last_name" class="col-sm-2 form-control-label">Name</label>
		<div class="col-sm-10">
			<%= text_field(:registration, :name, class: "form-control", :required => true) %>
		</div>
	</div>
	<div class="form-group row">
		<label for="registration_first_name" class="col-sm-2 form-control-label">Vorname</label>
		<div class="col-sm-10">
			<%= text_field(:registration, :first_name, class: "form-control") %>
		</div>
	</div>

	<div class="form-group row">
		<label for="registration_email" class="col-sm-2 form-control-label">E-Mail</label>
		<div class="col-sm-10">
			<%= text_field(:registration, :email, class: "form-control") %>
		</div>
	</div>

	<div class="form-group row">
		<label for="registration_telefon" class="col-sm-2 form-control-label">Telefon</label>
		<div class="col-sm-10">
			<%= text_field(:registration, :phone, class: "form-control") %>
		</div>
	</div>

	<div class="form-group row">
		<label for="registration_classing" class="col-sm-2 form-control-label">Klassierung</label>
		<div class="col-sm-10">
			<%= text_field(:registration, :classing, class: "form-control") %>
		</div>
	</div>

	<div class="form-group row">
		<label for="registration_classing_value" class="col-sm-2 form-control-label">Klassierungswert</label>
		<div class="col-sm-10">
			<%= text_field(:registration, :classing_value, class: "form-control") %>
		</div>
	</div>
	
	<div class="form-group">
		<label for="registration_bemerkung" class="control-label">Bemerkung</label>
		<div class="controls">
			<%= text_area(:registration, :comment, :size=>"100", class: "form-control") %>
		</div>
	</div>
	<div class="form-actions">
		<%= submit_tag "Anmelden", :class => "btn btn-lg btn-primary"  %>
	</div>
	<% end %>
</div>